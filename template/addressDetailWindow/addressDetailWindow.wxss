.mask {
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
  width: 100%;
  height: 100%
}
.mask .window {
  width: 90%;
  height:728rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  padding: 0 30rpx;
  box-sizing: border-box
}
.mask .window .item {
  height: 80rpx;
  border-bottom: 2rpx solid rgba(222,222,222,1)
}
.mask .window .button {
  width:400rpx;
  height:88rpx;
  background:rgba(30,176,2,1);
  border-radius:44rpx;
  margin: 40rpx auto
}
.mask .window .close {
  position: absolute;
  left: 50%;
  bottom: -90rpx;
  width:66rpx;
  height:66rpx;
  transform: translateX(-50%)
}