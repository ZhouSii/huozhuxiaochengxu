  .tip{
    border: 2rpx solid;
    border-radius: 10rpx;
    padding: 12rpx 20rpx;
  }

  @keyframes sidebar-in{
    0%{bottom:-48%}
    100%{bottom:0}
  }

  .module-enter-active {
    animation: sidebar-in 200ms linear ;
  }
  .module-leave-active {
    animation: sidebar-in 200ms linear reverse;
  }

  .module {
    position: fixed;
    bottom: -68%;
    left: 0;
    z-index: 13;
  }



  .pay-module{
    position: fixed;
    bottom: -75%;
    left: 0;
    z-index: 15;
    height: 842rpx;
  }
  .pay-module .pay-item{
    height: 96rpx;
    padding: 0 40rpx;
  }
  .pay-module .pay-online{
    height: 96rpx;
    padding: 0 0 0 40rpx;
  }
  .pay-button{
    background-color: rgb(47, 179, 1);
    border-radius: 10rpx;
    margin: 20rpx;
    flex: 1;
  }

  .mask {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 12;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.4);
  }
  .mask2{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 113;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.4);
  }
  .mask2-window{
    background-color: white;
    border-radius: 20rpx;
    position: fixed;
    z-index: 113;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80%;
  }
  .tip-button{
    border-radius: 10rpx;
    border: 1px solid #DCDBDC;
    width: 26%;
    height: 60rpx;
  }
  .tip-input{
    height: 60rpx;
    border-radius: 10rpx;
