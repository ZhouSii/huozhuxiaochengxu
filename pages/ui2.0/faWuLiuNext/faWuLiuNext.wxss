page {
    height: 100%;
  }
.order-title {
    height: 72rpx;
    background:rgba(255,255,234,1);
    padding-left: 30rpx;
  }
  .info {
    padding: 30rpx;
  }
  .info .left {
    width: 120rpx;
    height: 120rpx;
  }
  .info .star {
    width: 30rpx;
    height: 28rpx;
    margin-right: 8rpx;
  }
  .info .right {
    height: 120rpx;
    width: calc(100% - 140rpx);
  }
  .info .info-attr {
    padding: 0 4rpx;
    height: 32rpx;
    border-radius: 4rpx;
    margin-right: 10rpx;
    color: white;
    font-size: 20rpx;
  }
  .info .info-bottom {
    width: 82%;
    background:rgba(246,248,250,1);
    border-radius: 10rpx;
    color: rgba(255,68,0,1);
    padding: 14rpx 20rpx;
    box-sizing: border-box;
  }
  .info .info-bottom view {
    line-height: 36rpx;
  }
  .info .button {
    border-radius: 40rpx;
    border: 2rpx solid #999999;
    padding: 12rpx 16rpx;
  }
  .info .phone {
    width: 68rpx;
    height: 68rpx;
  }
  .order-item1{
    padding-left: 30rpx;
    height: 100rpx;
  }

  .order-item1 .order-item-l{
    height: 100%;
    border-bottom: 2rpx solid #EEEEEE;
    max-width: calc(100% - 70rpx);
  }
  .img_w {
    width: 36rpx;
    height: 36rpx;
  }
  .img_w5 {
    width: 30rpx;
    height: 36rpx;
  }
  .img_14 {
    width: 28rpx;
    height: 28rpx;
    margin-left: 10rpx;
  }
  .input_w{
    width: 280rpx;
    text-align: right;
  }
  .footer{
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 15;
    height: 96rpx;
  }
  .footer .footer-left{
    border-top: 2rpx solid #DCDBDC ;
  }
  .footer .footer-right{
    width: 180rpx;
  }
  .sub-title {
    margin-top: 10rpx;
  }
  .info-item {
    height: 88rpx;
    padding: 0 34rpx;
    font-size: 28rpx;
  }
  .mask {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.4);
  }
  .mask1 {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 12;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.4);
  }
  .module {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 101;
  }
  .module1 {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 13;
  }
  .window-title {
    height: 100rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    border-bottom: 2rpx solid rgba(238,238,238,1);
  }
  .pay-item {
    height: 120rpx;
    padding: 0 60rpx;
  }
  .pay-item image {
    width: 36rpx;
    height: 36rpx;
  }
  .window-body{
    padding: 0 30rpx;
  }
  .window-body .body-title {
    width: 150rpx;
  }
  .goods-button-item {
    border-radius: 10rpx;
    border: 2rpx solid;
    width: 146rpx;
    height: 90rpx;
  }
  .remark-button-item {
    width: 160rpx;
    height: 60rpx;
    background: rgba(246,248,250,1);
    border-radius: 8rpx;
  }
  .success-button{
    height: 96rpx;
    background: rgba(30,175,1,1);
    border-radius: 16rpx;
    margin-bottom: 30rpx;
  }
  textarea {
    border-radius: 10rpx;
    border: none;
    outline: none;
    background-color: #f5f5f5;
    padding: 12rpx;
    width: auto;

  }

  .textarea_in {
    position: absolute;
    right: 10rpx;
    bottom: 16rpx;
  }
  .value-window {
    padding: 60rpx;
    line-height: 40rpx;
  }