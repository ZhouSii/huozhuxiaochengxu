textarea{
    width: 100%;
    border: none;
    background-color: #f5f5f5;
    padding: 8rpx;
    box-sizing: border-box;
  }

  textarea + view{
    position: absolute;
    right: 10rpx;
    bottom: 16rpx;
  }
  .goods-button{
    width: 25%;
  }

  .goods-button .goods-button-item{
    width: 150rpx;
    height: 48rpx;
    background:rgba(242,242,242,1);
    border-radius: 24rpx;
    margin-bottom: 16rpx;
  }
  .divide{
    height: 2rpx;
    width: 200rpx;
    background-color: #999999;
  }
  .remark-item{
    height: 70rpx;
    margin-bottom: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    line-height: 70rpx;
  }
  .remark-selected{
    border: 2rpx #333333 solid;
  }
  .remark-noselected{
    border: 2rpx #999999 solid;
  }
  ._h {
    height: 136rpx;
  }
  .button_g{
    height: 92rpx;
    background:linear-gradient(90deg,rgba(65,191,14,1) 0%,rgba(30,175,1,1) 100%);
    box-shadow:0 4rpx 12rpx 0 rgba(30,175,1,0.3);
    border-radius: 46rpx;
    margin: 30rpx;
  }