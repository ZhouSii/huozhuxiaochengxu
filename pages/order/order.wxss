@import "../../template/addressDetailWindow/addressDetailWindow.wxss";

page {
  display: flex;
  height: 100%;
  flex-direction: column;
}

.spec-box {
  width: 25%;
  box-sizing: border-box;
}

.spec-box .spec-button {
  margin-right: 20%;
}

.spec-box .spec-button .circle {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.slider {
  /* transition: all .3s ease-in-out; */
  position: absolute;
  bottom: 0;
  height: 2rpx;
  background: #2fb301;
}

.swiper {
  height: 176rpx;
}

.swiper-dot-left {
  position: absolute;
  left: 20px;
  top: 40px;
  cursor: pointer;
}

.swiper-dot-right {
  position: absolute;
  right: 20px;
  top: 40px;
  cursor: pointer;
}

.slide-image {
  width: 270rpx;
  height: 136rpx;
}

.slide-image-letter {
  width: 100rpx;
}

.carType {
  display: flex;
  white-space: nowrap;
}

.carType-item {
  padding: 0 20rpx;
}

.navi_bar_img {
  width: 32rpx;
  height: 32rpx;
}

.bkgfocus {
  border-radius: 54rpx;
  border: 2rpx solid #2fb301;
  background-color: #2fb301;
}

.sendType {
  width: 250rpx;
  height: 40rpx;
  border-radius: 40rpx;
  border: 2rpx solid #2fb301;
}

.row2 {
  height: 78rpx;
  border-bottom: 2rpx solid rgb(219, 219, 219);
}

.btn:hover {
  color: #f5f5f5;
}

.footer {
  height: 96rpx;
  box-sizing: border-box;
}

.footer-left-text {
  line-height: 96rpx;
}

.footer-left {
  border-bottom-left-radius: 8rpx;
  border-top-left-radius: 8rpx;
  width: 30%;
  border: 2rpx solid #2fb301;
  background-color: #2fb301;
}

.footer-right {
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  width: 70%;
  background-color: #25df00;
}

.youhui {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  border: 2rpx solid rgb(200, 200, 200);
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}

.youhui:hover {
  color: #ff3907;
}

.left-module {
  z-index: 1000;
  background: white;
}

.left-module .left-module-item {
  height: 80rpx;
  padding-left: 60rpx;
}

.left-module .left-module-item image {
  width: 36rpx;
  margin-right: 30rpx;
}

.circle {
  width: 140rpx;
  height: 140rpx;
  border-radius: 100rpx;
}

.route {
  height: 80rpx;
  background: rgba(255, 255, 255, 1);
  border-bottom: 2rpx solid rgba(242, 244, 244, 1);
  padding: 0 30rpx;
  box-sizing: border-box;
}

/* 发物流 */

.title {
    height: 68rpx;
    padding: 0 60rpx;
    border-bottom: 2rpx solid #F2F4F4;
    box-sizing: border-box;
  }
  .info {
    padding: 40rpx 0 40rpx 50rpx;
  }
  .info-item {
    height: 100rpx;
  }
  .youhui_h {
    height: 160rpx;border-radius: 8rpx;
  }
  .youhui_body {
    height: 100rpx;
    border-bottom: 2rpx solid #f5f5f5;
    font-size: 28rpx
  }
  .youhui_body_item {
    color: #666;
    white-space: nowrap;
    padding: 26rpx 20rpx;
  }
  .youhui_body_item_h {
    height: 60rpx
  }
  .youhui_body_item_h2 {
    height: 54rpx
  }
  .footer {
    border-radius: 8rpx;
    width: 100%;
    background-color: #25df00;
    height: 96rpx;
  }
  .fa_input {
    border-bottom: 2rpx solid #969696;
    width: 112rpx;
    text-align: center;
    border-radius: 0;
  }
  .goods-selected {
    border-bottom: 2rpx solid #969696;
    width: 150rpx;
    padding-left: 20rpx;
  }
  @keyframes sidebar-in{
    0%{bottom:-48%}
    100%{bottom:0}
  }
  .module-enter-active {
    animation: sidebar-in 200ms linear ;
  }
  .module-leave-active {
    animation: sidebar-in 200ms linear reverse;
  }

  .module {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 13;
  }
  .mask {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 12;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.4);
  }
  .window-body{
    padding: 0 10px;
  }
  .window-title {
    height: 50px;
    padding: 0 15px;
    box-sizing: border-box;
  }
  .goods-button {
    width: 25%;
  }

  .goods-button .goods-button-item {
    border-radius: 5px;
    border: 1px solid; /*no*/
    width: 90%;
    height: 30px;
    margin-bottom: 8px;
  }